<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#171717"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/first_line"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/reactangle16" />

        <View
            android:id="@+id/second_line"
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:background="@drawable/reactangle2"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/first_line"/>
        <View
            android:id="@+id/third_line"
            android:layout_width="20dp"
            android:layout_height="130dp"
            android:background="@drawable/reactangle1"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/second_line"/>
        <View
            android:id="@+id/fourth_line"
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:background="@drawable/reactangle2"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/third_line"/>
        <View
            android:id="@+id/fifth_line"
            android:layout_width="20dp"
            android:layout_height="170dp"
            android:background="@drawable/reactangle16"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/fourth_line"/>
        <View
            android:id="@+id/sixth_line"
            android:layout_width="20dp"
            android:layout_height="190dp"
            android:background="@drawable/reactangle2"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/fifth_line"/>

        <View
            android:id="@+id/seventh_line"
            android:layout_width="20dp"
            android:layout_height="220dp"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/sixth_line"
            android:background="@drawable/reactangle1" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tex1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_condensed_bold"
            android:lineHeight="112sp"
            android:shadowColor="#40F4F2F9"
            android:layout_marginTop="50dp"
            android:shadowDx="10"
            android:shadowDy="12"
            android:shadowRadius="20"
            android:text="G"
            android:textColor="#F4F2F9"
            android:textSize="110sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="335dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">


            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.Small.CubeGrid"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                app:SpinKit_Color="@color/white" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tex2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:lineHeight="21sp"
        android:text="GUMA MOBILE"
        android:textColor="#F4F2F9"
        android:textSize="24sp" />


</LinearLayout>

